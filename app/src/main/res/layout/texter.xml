<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/events_details_divider_grey"
    android:weightSum="2"><!--@color/events_details_divider_grey-->

    <ImageView
        android:id="@+id/btn_image_preview_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:rotation="180"
        android:scaleType="center"
        android:contentDescription="@string/ImageDesc_send_comment"
        android:src="@drawable/ic_send_black_24dp" />

    <EditText
        android:id="@+id/et_image_preview_comment"
        android:layout_width="268dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="@dimen/event_start_end_margin"
        android:layout_marginTop="7dp"
        android:background="@color/et_comment_bg" android:inputType="" />

</LinearLayout>
